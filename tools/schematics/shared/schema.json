{
  "$schema": "http://json-schema.org/schema",
  "id": "shared",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "generate shared",
      "default": "shared"
    },
    "directory": {
      "type": "string",
      "description": "Directory name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "type": {
      "type": "string",
      "description": "type value in routing",
      "default": "layout"
    },
    "haveMobile": {
      "type": "boolean",
      "description": "declare window.haveMobile value",
      "default": true
    }
  },
  "required": [
    "directory"
  ]
}
