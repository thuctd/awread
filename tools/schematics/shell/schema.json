{
  "$schema": "http://json-schema.org/schema",
  "id": "shell",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "generate feature-shell",
      "default": "shell"
    },
    "directory": {
      "type": "string",
      "description": "Directory name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "project": {
      "type": "string",
      "description": "Project name to add the page to"
    },
    "type": {
      "type": "string",
      "description": "type value in routing",
      "default": "page"
    }
  },
  "required": [
    "directory",
    "project"
  ]
}
