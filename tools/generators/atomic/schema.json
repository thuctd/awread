{
    "$schema": "http://json-schema.org/schema",
    "id": "atomic",
    "type": "object",
    "properties": {
        "list": {
            "type": "string",
            "description": "list of name, separate by comma (,) for example: submit-btn,input-form",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "project": {
            "type": "string",
            "description": "project name having this"
        },
        "type": {
            "type": "string",
            "description": "atomic design kind of component",
            "enum": [
                "atom",
                "molec",
                "organ",
                "template"
            ],
            "default": "atom"
        },
        "export": {
            "type": "boolean",
            "description": "export in the module to reuse other place",
            "default": true
        }
    },
    "required": [
        "list"
    ]
}