{
  "$schema": "http://json-schema.org/schema",
  "id": "shell",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "generate feature-shell",
      "default": "shell"
    },
    "directory": {
      "type": "string",
      "description": "Directory name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "application": {
      "type": "string",
      "description": "application name to add the shell lib to"
    },
    "type": {
      "type": "string",
      "description": "type value in routing",
      "default": "layout"
    },
    "kind": {
      "type": "string",
      "description": "kind ui or feature",
      "default": "feature"
    }
  },
  "required": [
    "directory",
    "application"
  ]
}