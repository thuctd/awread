{
  "$schema": "http://json-schema.org/schema",
  "id": "ui",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "feature name, example: auth",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "description": "library location, example: --directory=writer/web"
    },
    "pages": {
      "type": "string",
      "description": "pages list, example: --pages=login,register"
    }
  },
  "required": [
    "name","directory"
  ]
}
