{
  "$schema": "http://json-schema.org/schema",
  "id": "ui-page",
  "type": "object",
  "properties": {
    "list": {
      "type": "string",
      "description": "ui page name, like ui, example: register,login",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "description": "directory name to add the page to, example: --directory=writer/web"
    },
    "ui": {
      "type": "string",
      "description": "ui name to add the page to, example: --ui=auth"
    },
    "project": {
      "type": "string",
      "description": "project name"
    },
    "kind": {
      "type": "string",
      "description": "ui or feature kind",
      "default": "ui"
    },
    "type": {
      "type": "string",
      "description": "type of component like page, layout v.v..",
      "default": "page"
    }
  },
  "required": [
    "list",
    "directory",
    "ui"
  ]
}